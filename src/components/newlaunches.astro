---
import { Picture } from "astro:assets";
import lazioImage from "public/Lazio/Lazio Tower.jpg";
import project2Image from "public/Andria/VB 15010 (5).jpg";
import project3Image from "public/Lazio/VB 6091 (4).jpg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="py-16">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
      New Launches
    </h2>
    <p class="text-lg mt-4 text-slate-600 max-w-xl mb-8">
      Explore our latest projects and discover the perfect home for you.
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Project 1 -->
      <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
        <Link href="/project1">
          <Picture
            src={lazioImage}
            alt="Lazio Tower"
            widths={[400]}
            sizes="400px"
            loading="eager"
            format="avif"
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="text-2xl font-semibold mb-2 text-gray-800">Lazio Tower</h3>
            <p class="text-slate-600">
              Luxury apartments in the heart of the city with stunning views and modern amenities.
            </p>
          </div>
        </Link>
      </div>

      <!-- Project 2 -->
      <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
        <Link href="/project2">
          <Picture
            src={project2Image}
            alt="Project 2"
            widths={[400]}
            sizes="400px"
            loading="eager"
            format="avif"
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="text-2xl font-semibold mb-2 text-gray-800">Project Name 2</h3>
            <p class="text-slate-600">
              Description for project 2. Add your compelling project description here.
            </p>
          </div>
        </Link>
      </div>

      <!-- Project 3 -->
      <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
        <Link href="/project3">
          <Picture
            src={project3Image}
            alt="Project 3"
            widths={[400]}
            sizes="400px"
            loading="eager"
            format="avif"
            class="w-full h-64 object-cover"
          />
          <div class="p-6">
            <h3 class="text-2xl font-semibold mb-2 text-gray-800">Project Name 3</h3>
            <p class="text-slate-600">
              Description for project 3. Add your compelling project description here.
            </p>
          </div>
        </Link>
      </div>
    </div>
  </div>
</main>
