---
import { Picture } from "astro:assets";
import heroImage from "public/Lazio/Lazio Tower.jpg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="relative min-h-[600px] flex items-center">
  <div class="absolute inset-0 w-full h-full">
    <Picture
      src={heroImage}
      alt="Background"
      widths={[400, 800, 1200]}
      sizes="100vw"
      loading="eager"
      format="avif"
      class="w-full h-full object-cover"
    />
  </div>
  
  <div class="relative container mx-auto px-6">
    <div class="ml-auto max-w-xl bg-white/90 backdrop-blur-sm p-8 rounded-lg">
      <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
        Designed for a lifetime.
      </h1>
      <p class="text-lg mt-4 text-slate-600 max-w-xl">
        Astroship is a starter template for startups, marketing websites & landing
        pages.<wbr /> Built with Astro.build and TailwindCSS. You can quickly create
        any website with this starter.
      </p>
      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <Link
          href="#"
          href="https://web3templates.com/templates/astroship-starter-website-template-for-astro"
          target="_blank"
          class="flex gap-1 items-center justify-center"
          rel="noopener">
          <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
          Download for Free
        </Link>
        <Link
          size="lg"
          style="outline"
          rel="noopener"
          href="https://github.com/surjithctly/astroship"
          class="flex gap-1 items-center justify-center"
          target="_blank">
          <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
          GitHub Repo
        </Link>
      </div>
    </div>
  </div>
</main>
